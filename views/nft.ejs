    <%- include('partials/footer') %>
    <script>
        const nft = <%- JSON.stringify(json) %>;

        const title = document.getElementById('title');
        const paramsEl = document.getElementById('params');
        // Flip animation
        const flipCard = document.getElementById('flip-card');
        const thumbImg = document.getElementById('side-img');
        const thumbVid = document.getElementById('side-vid');
        const mainImg = document.getElementById('medal-image');
        const mainVid = document.getElementById('medal-video');
        

        thumbImg.onclick = () => {
            flipCard.classList.remove('flipped');
            thumbImg.classList.add('selected');
            thumbVid.classList.remove('selected');
            mainVid.pause();
        };
        thumbVid.onclick = () => {
            flipCard.classList.add('flipped');
            thumbVid.classList.add('selected');
            thumbImg.classList.remove('selected');
            mainVid.play().catch(()=>{});
        };

        function escapeHtml(str){
            return str.replace(/[&<>'"]/g, c => ({'&':'&amp;','<':'&lt;','>':'&gt;',"'":'&#39;','"':'&quot;'}[c]));
        }
        // Sharing logic (customize with real URL if needed)
        function share(network) {
            // medal_url can be dynamic
            const medal_url = window.location.href;
            const share_text = `${nft.name} — моя NFT-медаль Sports Trophies`;
            if(network === 'twitter') {
                window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(medal_url)}&text=${encodeURIComponent(share_text)}`, '_blank');
            } else if(network === 'instagram') {
                alert('Instagram шэринга не поддерживается ссылками. Скопируйте ссылку вручную.');
            } else if(network === 'telegram') {
                window.open(`https://t.me/share/url?url=${encodeURIComponent(medal_url)}&text=${encodeURIComponent(share_text)}`, '_blank');
            } else if(network === 'copy') {
                navigator.clipboard.writeText(medal_url);
                alert('Ссылка скопирована!');
            } else if(network === 'wa') {
                window.open(`https://wa.me/?text=${encodeURIComponent(share_text+' '+medal_url)}`, '_blank');
            }
        }
        function renderFromData(data){
            // titleEl.textContent = data.name || 'NFT Medal';
            title.textContent = data.name;
            // Description
            const descEl  = document.getElementById('description');
            descEl.innerHTML = (data.description || '').replace(/\n/g,'<br>');

            // Params (attributes -> key:value)
            var table = document.createElement('table');
            table.className = "attributes-table";
            var tbody = document.createElement('tbody');
            tbody.id = "tbody";
            (data.attributes || []).forEach(att=>{
                var key = (att.trait_type || '').trim();
                var val = String(att.value ?? '').trim();
                if(!key) {
                    key = String(Object.keys(att)[0]);
                    val = String(Object.values(att)[0]);
                }
                if(!key) return;
                const row = document.createElement('tr');
                row.innerHTML = `<th>${escapeHtml(key)}</th><td>${escapeHtml(val)}</td>`;
                tbody.appendChild(row);
            });
            table.appendChild(tbody);
            paramsEl.appendChild(table);

            const vidSrc = data.animation_url.replace("ipfs://", "https://ipfs.io/ipfs/") || '';
            const thumbVideoVid = thumbVid;
            thumbVideoVid.src = vidSrc;
            mainVid.src = vidSrc;

            const imgSrc = data.image || "https://sportstrophies.io/images/contract-image.png";
            thumbImg.src = imgSrc;
            mainImg.src = imgSrc;
        }
        renderFromData(nft);
    </script>
